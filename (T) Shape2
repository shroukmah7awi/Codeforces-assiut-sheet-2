
using namespace std;
#include <iostream>
#include <algorithm>
#include <vector>
#include <string>
#include <iomanip> 
#include<cmath>
#include<bitset>


int main()
{
	int n;
	cin >> n;
	int p = 1, s = n - 1;


	for (int i = 0; i < n; ++i)
	{
		for (int j = 0; j < s; ++j)
		{
			cout << " ";
		}

		for (int j = 0; j < p; ++j)
		{
			cout << "*";
		}
		cout << endl;
		s--;
		p += 2;

	}
	

}
	
